<launch>
    <arg name="port" default="$(optenv ultron_PORT /dev/ttyUSB0)" />

    <!-- Load robot description -->
    <include file="$(find ultron_description)/launch/description.launch"/>

     <!-- Petrorov arduino driver -->
    <node pkg="rosserial_python" type="serial_node.py" name="petrorov_node">
        <rosparam subst_value="true">
            port: $(arg port)
            baud: 115200

            control_frequency: 10.0
            diagnostic_frequency: 1.0

            max_acceleration: 3.0
            max_speed: 1.0
            wheel_diameter: 0.15
            polling_timeout: 2.0
            
            diagnostic_rate: 1.0
            range_sensor_rate: 0.05
        </rosparam>
    </node>

    <!-- Petrorov hardware driver -->
    <node pkg="ultron_kernel" type="ultron_node" name="ultron_node">
        <rosparam subst_value="true">
            
            control_frequency: 10.0
            diagnostic_frequency: 1.0

            max_acceleration: 3.0
            max_speed: 1.0
            wheel_diameter: 0.3555
            polling_timeout: 10.0
        </rosparam>
    </node>

    <!-- Differential controller parameters and basic localization -->
    <include file="$(find ultron_control)/launch/control.launch" />

    <!--Teleop -->
    <include file="$(find ultron_control)/launch/teleop.launch" />

    <!-- Diagnostic Aggregator -->
    <node pkg="diagnostic_aggregator" type="aggregator_node" name="diagnostic_aggregator">
        <rosparam command="load" file="$(find ultron_kernel)/config/diagnostics.yaml"/>
    </node>

</launch>
